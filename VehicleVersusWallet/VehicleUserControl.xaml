<UserControl x:Class="VehicleVersusWallet.VehicleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleVersusWallet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Name}"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Image Source="{StaticResource PriceIcon}"/>
            <TextBlock Text="{Binding Price}"/>
            <Image Source="{StaticResource PetrolIcon}"/>
            <TextBlock Text="{Binding Consumption}"/>
        </StackPanel>

        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Click="EditVehicle_Click">
            <Image Source="{StaticResource SettingsIcon}"/>
        </Button>
    </Grid>
</UserControl>
