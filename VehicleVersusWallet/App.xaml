<Application x:Class="VehicleVersusWallet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VehicleVersusWallet"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BitmapImage x:Key="PriceIcon" UriSource="/resources/price-icon.png"/>
        <BitmapImage x:Key="PetrolIcon" UriSource="resources/petrol-icon.png"/>
        <BitmapImage x:Key="SettingsIcon" UriSource="/resources/settings-icon.png"/>
        <BitmapImage x:Key="AddIcon" UriSource="/resources/add-icon.png"/>

        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
    </Application.Resources>
</Application>
