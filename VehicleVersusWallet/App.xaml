<Application x:Class="VehicleVersusWallet.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VehicleVersusWallet"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Appication Icons-->
        <BitmapImage x:Key="PriceIcon" UriSource="/resources/price-icon.png"/>
        <BitmapImage x:Key="PetrolIcon" UriSource="resources/petrol-icon.png"/>
        <BitmapImage x:Key="SettingsIcon" UriSource="/resources/settings-icon.png"/>
        <BitmapImage x:Key="AddIcon" UriSource="/resources/add-icon.png"/>

        <!--Application General Styles-->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <!--Application Color Themes-->
        <SolidColorBrush Color="#000000" x:Key="ApplicationBackgroundColor"/>
        <SolidColorBrush Color="#14213D" x:Key="BackgroundColor"/>
        <SolidColorBrush Color="#1B2D54" x:Key="BackgroundColorHover"/>
        <SolidColorBrush Color="#2D4A89" x:Key="BorderColor"/>
        <SolidColorBrush Color="#E5E5E5" x:Key="TextColor"/>

    </Application.Resources>
</Application>
